<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="app.simov.teseo.ui.qrlicencia.QrlicenciaFragment">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:alpha=".20"
        app:srcCompat="@drawable/imos"/>



    <!--Titulos y cabeceraz-->
    <TextView
        android:id="@+id/tvAppQrlicencia"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp"
        android:textAlignment="center"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="#FAF8F8"/>

    <TextView
        android:id="@+id/tvUsuarioQrlicencia"
        app:layout_constraintTop_toTopOf="@+id/tvAppQrlicencia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="17dp"
        android:textAlignment="textStart"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="Abdiel Carrasco"
        android:textColor="#FFFFFF"/>



    <TextView
        android:id="@+id/tvMunicipioQrlicencia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvUsuarioQrlicencia"
        android:layout_margin="20dp"
        android:textAlignment="textStart"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="Tijuana"
        android:textColor="@color/titulosVerdes"/>
    <!--Terminar Titlos y Cabeceras-->

    <TextView
        android:id="@+id/tvTitulobotonQrlicencia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvMunicipioQrlicencia"
        android:layout_marginTop="250dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textAlignment="textStart"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="ESCANEA LICENCIA"
        android:textColor="@color/titulosVerdes"/>


    <!--Botón QR-->
    <Button
        android:id="@+id/btnQrLicencia"
        app:layout_constraintTop_toBottomOf="@+id/tvTitulobotonQrlicencia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/botonLogin"
        android:textColor="@color/white"
        android:text="@string/QR_licencia" />

    <!--Fin Botón QR-->
</androidx.constraintlayout.widget.ConstraintLayout>